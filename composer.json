{
    "version": "1.0.0",
    "name": "mpsoft/mpcustomerinvoice",
    "description": "Manage customer invoice codes.",
    "type": "prestashop-module",
    "license": "AFL-3.0",
    "authors": [
        {
            "name": "Massimiliano Palermo",
            "email": "maxx.palermo@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "MpSoft\\MpCustomerInvoice\\": "src/"
        }
    },
    "require": {
        "php": ">=8.1.0",
        "prestashop/prestashop-webservice-lib": "dev-master",
        "ext-json": "*",
        "ext-curl": "*"
    },
    "require-dev": {
        "prestashop/php-dev-tools": "^4.0",
        "phpoffice/phpspreadsheet": "^3.3"
    },
    "config": {
        "platform": {
            "php": "8.1"
        },
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "prepend-autoloader": false
    },
    "extra": {
        "prestashop": {
            "name": "mpcustomerinvoice",
            "displayName": "MP Customer Invoice",
            "version": "1.0.0",
            "description": "Manage customer invoice codes.",
            "author": "Massimiliano Palermo",
            "tab": "administration",
            "is_configurable": 1,
            "need_instance": 0
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
